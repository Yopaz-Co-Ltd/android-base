<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="mainViewModel"
            type="com.kira.android_base.main.MainViewModel" />

        <variable
            name="service"
            type="com.kira.android_base.base.service.MyForegroundService" />

        <import type="com.kira.android_base.base.supports.utils.Enums.CommandService" />
    </data>

    <LinearLayout
        android:id="@+id/linear_layout_root_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> mainViewModel.logout()}"
                android:text="@string/logout" />

            <Button
                android:id="@+id/button_start_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16"
                android:backgroundTint="@color/selector_button_enable"
                android:onClick="@{() -> mainViewModel.sendCommandToService(CommandService.ACTION_START_OR_RESUME_SERVICE)}"
                android:text="@string/start_service" />

            <Button
                android:id="@+id/button_kill_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16"
                android:backgroundTint="@color/selector_button_enable"
                android:onClick="@{() -> mainViewModel.sendCommandToService(CommandService.ACTION_STOP_SERVICE)}"
                android:text="@string/kill_service" />
        </LinearLayout>

        <Button
            android:id="@+id/button_get_data_bind_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/space_16"
            android:text="@string/get" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text='@{mainViewModel.userLiveData.name ?? ""}'
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text='@{mainViewModel.userLiveData.stringAge() ?? ""}'
            android:textColor="@android:color/black" />

        <com.kira.android_base.base.ui.widgets.recyclerview.BaseRecyclerView
            android:id="@+id/brv_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</layout>
